<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/volley"
    android:orientation="vertical"
    style="@style/match"
    android:background="#F3F0F3"
    tools:context="com.example.android.volleyballscore.MainActivity">
    <EditText
        style="@style/setheads"
        android:id="@+id/editA"
        android:hint="@string/teamA"
        android:inputType="textCapWords" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">
        <TextView
            style="@style/set"
            android:id="@+id/setA1"
            android:text="@string/tset"/>
        <TextView
            style="@style/set"
            android:id="@+id/setA2"
            android:text="@string/tset"/>
        <TextView
            style="@style/set"
            android:id="@+id/setA3"
            android:text="@string/tset"/>
        <TextView
            style="@style/set"
            android:id="@+id/setA4"
            android:text="@string/tset"/>
        <TextView
            style="@style/set"
            android:id="@+id/setA5"
            android:text="@string/tset"/>
    </LinearLayout>
    <EditText
        style="@style/setheads"
        android:id="@+id/editB"
        android:hint="@string/teamb"
        android:inputType="textCapWords"
        android:layout_marginTop="5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">
        <TextView
            style="@style/set"
            android:id="@+id/setB1"
            android:text="@string/tset"/>
        <TextView
            style="@style/set"
            android:id="@+id/setB2"
            android:text="@string/tset"/>
        <TextView
            style="@style/set"
            android:id="@+id/setB3"
            android:text="@string/tset"/>
        <TextView
            style="@style/set"
            android:id="@+id/setB4"
            android:text="@string/tset"/>
        <TextView
            style="@style/set"
            android:id="@+id/setB5"
            android:text="@string/tset"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="5dp"
        android:background="#B7B4B8" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            style="@style/teams"
            android:orientation="vertical">
            <TextView
                android:id="@+id/titleA"
                style="@style/setheads"
                android:text="@string/teamA" />
            <Button
                style="@style/setheads"
                android:textSize="25sp"
                android:text="@string/vpoint"
                android:onClick="pointScoreA" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="5dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:background="#B7B4B8" />
        <LinearLayout
            style="@style/teams"
            android:orientation="vertical">
            <TextView
                android:id="@+id/titleB"
                style="@style/setheads"
                android:text="@string/teamb" />
            <Button
                style="@style/setheads"
                android:onClick="pointScoreB"
                android:textSize="25sp"
                android:text="@string/vpoint" />
        </LinearLayout>
    </LinearLayout>
    <Button
        style="@style/tbutton"
        android:id="@+id/reset"
        android:text="@string/reset"
        android:onClick="reset"/>
</LinearLayout>
